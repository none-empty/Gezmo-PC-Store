@using Gezmo_PC_Store.Services
 
@{
    Layout = "_Layout";
}
@inject IDataProvider CategoryService
@{
    var _categories = await CategoryService.GetCategoriesAsync();
}
<!DOCTYPE html>
 
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="~/css/_Main-ProductPage_Layout.css"> 
</head>
<body>
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @{
        foreach (var cat in _categories )
        {
            <a asp-controller="ProductsPage" asp-action="ProductsPage" asp-route-type="category" asp-route-category_num=@cat.CategoryId >@cat.Name</a>   
        }
    }
  
    
</div>
<span id="menuButton" style="font-size:30px;cursor:pointer;background-color: white;" onclick="openNav()">&#9776;  </span>

<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
</body>
</html>