 
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
@{
    var glob = ViewData["Globals"] as GlobalModels;
    var cart = glob.cart;
}
<html>
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/css/OrderDetails.css">
</head>
<body>
<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
                    <div class="card-body p-5">

                        <p class="lead fw-bold mb-5" style="color: #f37a27;">Purchase Reciept</p>

                        <div class="row">
                            <div class="col mb-3">
                                <p class="small text-muted mb-1">Date</p>
                                <p>@DateTime.Now.ToString()</p>
                            </div>
                           
                        </div>

                        <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
                            @{
                                foreach (var prod in cart.Items)
                                {
                                    <div class="row align-items-center">
                                        <!-- Product Name -->
                                        <div class="col-md-8 col-lg-6">
                                            <p>@prod.item.ProductName</p>
                                        </div>

                                        <!-- Total Price -->
                                        <div class="col-md-4 col-lg-3">
                                            <p>@prod.get_total()</p>
                                        </div>

                                        <!-- Quantity Controls -->
                                        <div class="col-md-4 col-lg-3 d-flex justify-content-end align-items-center">
                                            <button class="btn btn-outline-secondary btn-sm px-1 py-0" onclick="decreaseQuantity(this)" style="font-size: 0.8rem; height: 25px;">-</button>
                                            <div class="mx-1" style="width: 40px; height: 25px; display: flex; align-items: center; justify-content: center; border: 1px solid #ccc; border-radius: 4px; font-size: 0.8rem;">
                                               @prod.quantity
                                            </div>
                                            <button class="btn btn-outline-secondary btn-sm px-1 py-0" onclick="increaseQuantity(this)" style="font-size: 0.8rem; height: 25px;">+</button>
                                        </div>
                                    </div>


                                }
                            }
                            <div class="row">
                                <div class="col-md-8 col-lg-9">
                                    <p class="mb-0">Shipping</p>
                                </div>
                                <div class="col-md-4 col-lg-3">
                                    <p class="mb-0">$33.00</p>
                                </div>
                            </div>
                        </div>

                        <div class="row my-4">
                            <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                                <p class="lead fw-bold mb-0" style="color: #f37a27;">$@cart.Total(33) </p>
                            </div>
                        </div>

                       

                        <p class="mt-4 pt-2 mb-0">Want any help? <a href="#!" style="color: #f37a27;">Please contact
                            us</a></p>

                    </div>
                </div>
                
                <button class="btn btn-primary btn-lg mb-3 me-2 " style="margin-top: 30px">
                    <i class="bi">Confirm Order</i>  
                </button>
            </div>
        </div>
    </div>
</section>
</body>
</html>